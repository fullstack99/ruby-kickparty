<h1>Sign In</h1>

<%= render "facebook" %>

<br/><br/>

<%= form_tag('/signin', method: "post") do %>

  <%= label_tag(:email, "Email:") %>
  <%= email_field(:user, :email, class: 'form-control') %>
  <%= label_tag(:password, "Password:") %>
  <%= password_field(:user, :password, class: 'form-control') %>
  <br/>
  <%= hidden_field(nil, :next, value: @next) %>
  <%= submit_tag("Log in", class: 'btn btn-primary') %>

<% end %>



<div style="padding-top: 30px;">
Not a member yet?  <a href="/signup?next=<%= @next %>">Sign up here</a>.
</div>
