<section id="header">
<!--navigation -->
<!-- Static navbar -->
<div class="navbar navbar-inverse navbar-static-top yamm sticky" role="navigation">

    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><img src="/img/kickparty-logo.png" alt="KickParty"></a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item <%= @page == :home ? 'active' : '' %>">
                    <a href="/">Home</a>
                </li>
                <li class="nav-item <%= @page == :events ? 'active' : '' %>">
                    <a href="/events">Events</a>
                </li>
                <li class="nav-item <%= @page == :about ? 'active' : '' %>">
                    <a href="/about-kickparty">About</a>
                </li>
                <li class="nav-item <%= @page == :contact ? 'active' : '' %>">
                    <a href="/contact-kickparty">Contact</a>
                </li>
                <!--menu home li end here-->

                <% if current_user
                    user = current_user
                    %>

                <li class="dropdown">
                    <a href="/<%= user['slug'] %>" class="dropdown-toggle" data-toggle="dropdown">
                      <span style="background-image:url(<%= user['profile_img'] %>);background-size:100%;border:2px #fff solid;border-radius:50%;height:20px;width:20px;display: inline-block;">
                      </span>
                      <span style="display: inline-block; height: 20px; vertical-align: top">
                        <%= user['first_name'] %> <i class="fa fa-angle-down"></i>
                      </span>

                    </a>
                    <ul class="dropdown-menu dark-dropdown">
                        <li><a href="/<%= user['slug'] %>/edit">Update Profile</a></li>
                        <li><a href="/<%= user['slug'] %>">View Profile</a></li>
                        <li><a href="/signout">Logout</a></li>
                    </ul>
                </li>

                <% else %>
                <li class="nav-item <%= @page == :signin ? 'active' : '' %>">
                    <a href="/signin">Sign In</a>
                </li>
                <% end %>

            </ul>
        </div><!--/.nav-collapse -->
    </div><!--container-->
</div><!--navbar-default-->
</section>
